model User {
  id              Int      @id @default(autoincrement())
  username        String   @unique
  pass            String
  email           String   @unique
  fullName        String
  pictureUrl      String
  createdAt       DateTime @default(now())
  achievements    String[]
  friends         Int[]
  blockedUsers    Int[]
  posts           posts[]
  two_factor_auth Boolean  @default(false)
  status          stat     @default(OFFLINE)
  point           Int      @default(0)
  played          Int      @default(0)
  won             Int      @default(0)
  lost            Int      @default(0)
  row             Int      @default(0)
  coalition       String

  @@map("users")
}

model SessionToken {
  id        Int      @id @default(autoincrement())
  userId    Int
  loginIp   String
  token     String   @unique
  loginTime DateTime @default(now())

  @@map("sessionTokens")
}

model Game {
  id            Int     @id @default(autoincrement())
  leftPlayerId  Int
  rightPlayerId Int
  map           Int
  round         Int
  gameId        String  @unique
  private       Boolean
  hash          String  @unique
  status        Int
  userIds       Int[]
  userCount     Int

  @@map("games")
}

model Validate {
  id           Int      @id @default(autoincrement())
  userId       Int
  validcode    Int
  email        String
  expired_date DateTime @default(now())

  @@map("validations")
}

model friendRequest {
  id         Int      @id @default(autoincrement())
  senderId   Int
  receiverId Int
  time       DateTime @default(now())

  @@map("friendRequests")
}

model GameHistory {
  id               Int      @id @default(autoincrement())
  leftPlayer       String
  rightPlayer      String
  leftPlayerScore  Int
  rightPlayerScore Int
  leftPlayerImg    String
  rightPlayerImg   String
  gameTime         DateTime @default(now())

  @@map("gameHistorys")
}

model userMute {
  id         Int       @id @default(autoincrement())
  userId     Int
  mutedTime  DateTime  @default(now())
  channels   channels? @relation(fields: [channelsId], references: [id])
  channelsId Int?
}

model messages {
  id         Int      @id @default(autoincrement())
  senderId   Int
  receiverId Int
  message    String
  time       DateTime @default(now())
}

model channels {
  id          Int        @id @default(autoincrement())
  channelName String     @unique()
  ownerId     Int
  userIds     Int[]
  adminIds    Int[]
  mutedUsers  userMute[]
  BannedUsers Int[]
  public      Boolean    @default(true)
  password    String     @default("")
}

model channelMessages {
  id        Int      @id @default(autoincrement())
  channelId Int
  senderId  String
  message   String
  time      DateTime @default(now())
}

model posts {
  id       Int      @id @default(autoincrement())
  user     User?    @relation(fields: [userId], references: [id])
  userId   Int?
  content  String
  likes    Int
  retweets Int
  time     DateTime @default(now())

  @@map("posts")
}
