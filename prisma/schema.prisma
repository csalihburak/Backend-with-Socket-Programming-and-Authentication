generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Stat {
  ONLINE
  OFFLINE
  IN_GAME
  BUSY
}

model User {
  id              Int      @id @default(autoincrement())
  username        String   @unique
  pass            String
  email           String   @unique
  fullName        String
  createdAt       DateTime @default(now())
  two_factor_auth Boolean  @default(false)
  played          Int      @default(0)
  won             Int      @default(0)
  lost            Int      @default(0)
  row             Int      @default(0)
  stat            Stat     @default(OFFLINE)
  coalition       String

  @@map("users")
}

